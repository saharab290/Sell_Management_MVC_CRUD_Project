@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<section class="vh-80 gradient-custom">
    <div class="container py-2 h-80">
        <div class="row d-flex justify-content-center align-items-center h-80">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form method="post">
                            <h1 class="fw-bold mb-2 text-uppercase">@ViewData["Title"]</h1>
                            <p class="text-white-50 mb-5">Enter your email.</p>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-outline form-floating form-white mb-4">

                                <input type="email" id="typeEmailX" asp-for="Input.Email" class="form-control form-control-lg text-center" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" for="typeEmailX" class="text-dark"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-outline-light btn-lg px-5">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
